
<!--登录对话框-->  
<div class="modal fade" id="myLogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
	<div class="modal-content">
	  <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3 class="modal-title"><b>登录</b></h3>
	   </div>
	   <div class="modal-body">
	     <form method="post" action='/user/signin' >
		 <input type="text" placeholder="用户名" name='newuser[name]'><i class="iconfont icon-wode1"></i><br>
         <input type="password" placeholder="密码" name='newuser[password]'><i class="iconfont icon-quanxian"></i><br>
		 <div class="modal-btn">
		   <button type="submit" class="btn btn-default signinbtn">登录</button>
		   <button type="button" class="btn btn-danger"  data-dismiss="modal">取消</button>
         </div>
         </form>
	   </div>
     </div>
  </div>
</div>
<!--注册对话框--> 
<div class="modal fade" id="myRegister" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
	<div class="modal-content">
	  <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3 class="modal-title"><b>注册</b></h3>
	  </div>
	  <div class="modal-body">
	    <form method="post" action="/new/user">
		  <input type="text"  placeholder="邮箱" name='newuser[emaill]'><i class="iconfont icon-youxiang"></i>
          <input type="text"  placeholder="用户名" name='newuser[name]'><i class="iconfont icon-wode1"></i>
          <input type="password"  placeholder="密码" name='newuser[password]'><i class="iconfont icon-quanxian"></i>
		  <div class="modal-btn">
            <button type="submit" class="btn btn-default signupbtn">注册</button>
		    <button type="button" class="btn btn-danger"  data-dismiss="modal">取消</button>
		  </div>
		</form>
    </div>
  </div>
</div>

